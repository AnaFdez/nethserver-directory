{
        my $REWRITERMODULE = `rpm -ql openldap-servers | grep 'rwm\.la\$'`;
        chomp $REWRITERMODULE;
        
        $OUT .= <<TEMPLATE;

# 10config fragment

dn: cn=config
olcPasswordCryptSaltFormat: \$6\$%.86s
olcTLSCipherSuite: HIGH:MEDIUM:+SSLv2
olcTLSCACertificateFile: /etc/openldap/slapd.pem
olcTLSCertificateFile: /etc/openldap/slapd.pem
olcTLSCertificateKeyFile: /etc/openldap/slapd.pem
olcTLSVerifyClient: never

dn: olcDatabase={-1}frontend,cn=config
olcPasswordHash: {CRYPT}

dn: cn=module,cn=config
objectClass: olcModuleList
cn: module
olcModuleLoad: $REWRITERMODULE

TEMPLATE
}
