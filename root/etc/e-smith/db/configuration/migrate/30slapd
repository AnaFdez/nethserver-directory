{
        my ($ldap, $slapd);

        $ldap = $DB->get('ldap') or return;

        # migration starts:
        $slapd = $DB->get('slapd') or $DB->new_record('slapd', { type => "service" });

        # merge existing properties:
        $slapd->merge_props($ldap->props);

        # dispose old service record:
        $ldap->delete;
}