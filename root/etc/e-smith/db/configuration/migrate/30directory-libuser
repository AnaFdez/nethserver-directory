{
    #
    # Set "ldap" in libuser.conf modules
    #
    my $libuser = $DB->get('libuser') or return;


    #
    # Creation through ldap-exclusive:
    #
    if($libuser->prop('CreateModules') ne 'ldap') {
	$libuser->set_prop('CreateModules', 'ldap');
    }


    #
    # Other actions, append ldap:
    #
    my $Modules = $libuser->prop('Modules');

    if($Modules !~ /ldap/) {
	$Modules .= ' ldap';
	$libuser->set_prop('Modules', $Modules);
    }

	
}
